{
    "id": "tenants-survey",
    "title": "Tenant Experience Survey",
    "description": "Help us understand your rental experience and security deposit concerns",
    "estimated_time": "5-7 minutes",
    "version": "1.0",
    "created_at": "2025-01-27",
    "questions": [
        {
            "id": "contact_name",
            "type": "text",
            "question": "Full Name",
            "required": true,
            "placeholder": "Enter your full name"
        },
        {
            "id": "contact_email",
            "type": "email",
            "question": "Email Address",
            "required": true,
            "placeholder": "your.email@example.com"
        },
        {
            "id": "contact_phone",
            "type": "tel",
            "question": "Phone Number",
            "required": true,
            "placeholder": "+256 700 000 000"
        },
        {
            "id": "tenant_type",
            "type": "radio",
            "question": "What type of tenant are you?",
            "required": true,
            "options": [
                {"value": "current", "label": "Current tenant"},
                {"value": "prospective", "label": "Looking for rental property"},
                {"value": "former", "label": "Former tenant"}
            ]
        },
        {
            "id": "rental_location",
            "type": "select",
            "question": "Where is your rental property located?",
            "required": true,
            "options": [
                {"value": "kampala", "label": "Kampala"},
                {"value": "entebbe", "label": "Entebbe"},
                {"value": "jinja", "label": "Jinja"},
                {"value": "mbarara", "label": "Mbarara"},
                {"value": "gulu", "label": "Gulu"},
                {"value": "other", "label": "Other"}
            ]
        },
        {
            "id": "deposit_amount",
            "type": "select",
            "question": "What is your typical security deposit amount?",
            "required": true,
            "options": [
                {"value": "under_500k", "label": "Under UGX 500,000"},
                {"value": "500k_1m", "label": "UGX 500,000 - 1,000,000"},
                {"value": "1m_2m", "label": "UGX 1,000,000 - 2,000,000"},
                {"value": "2m_5m", "label": "UGX 2,000,000 - 5,000,000"},
                {"value": "over_5m", "label": "Over UGX 5,000,000"}
            ]
        },
        {
            "id": "deposit_concerns",
            "type": "checkbox",
            "question": "What are your main concerns about security deposits? (Select all that apply)",
            "required": true,
            "options": [
                {"value": "unfair_deductions", "label": "Unfair deductions by landlord"},
                {"value": "no_transparency", "label": "Lack of transparency in deposit handling"},
                {"value": "delayed_refunds", "label": "Delayed refunds when moving out"},
                {"value": "no_interest", "label": "No interest earned on deposit"},
                {"value": "dispute_resolution", "label": "Difficulty resolving disputes"},
                {"value": "trust_issues", "label": "General trust issues with landlords"}
            ]
        },
        {
            "id": "deposit_experience",
            "type": "rating",
            "question": "How would you rate your overall experience with security deposits?",
            "required": true,
            "scale": 5,
            "labels": {
                "1": "Very Poor",
                "3": "Average",
                "5": "Excellent"
            }
        },
        {
            "id": "blockchain_awareness",
            "type": "radio",
            "question": "How familiar are you with blockchain technology?",
            "required": true,
            "options": [
                {"value": "very_familiar", "label": "Very familiar - I understand how it works"},
                {"value": "somewhat_familiar", "label": "Somewhat familiar - I've heard about it"},
                {"value": "not_familiar", "label": "Not familiar - I don't know much about it"}
            ]
        },
        {
            "id": "est8ledger_interest",
            "type": "rating",
            "question": "How interested would you be in using est8Ledger for secure deposit management?",
            "required": true,
            "scale": 5,
            "labels": {
                "1": "Not Interested",
                "3": "Neutral",
                "5": "Very Interested"
            }
        },
        {
            "id": "additional_feedback",
            "type": "textarea",
            "question": "Any additional feedback or suggestions for improving security deposit management?",
            "required": false,
            "placeholder": "Share your thoughts, experiences, or suggestions..."
        }
    ]
}
