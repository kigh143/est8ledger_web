{
  "id": "tenants-survey",
  "title": "Renters Experience Survey",
  "description": "Help us understand your experience with security deposits, challenges,and expectations.",
  "estimated_time": "5-7 minutes",
  "version": "1.1",
  "created_at": "2025-10-01",
  "questions": [
    {
      "id": "contact_name",
      "type": "text",
      "question": "Full Name",
      "required": false,
      "placeholder": "Enter your full name"
    },
    {
      "id": "contact_phone",
      "type": "tel",
      "question": "Phone Number",
      "required": false,
      "placeholder": "+256 700 000 000"
    },
    {
      "id": "current_renter",
      "type": "radio",
      "question": "Do you currently rent your home?",
      "required": true,
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" },
        { "value": "former", "label": "I used to, but not anymore" }
      ]
    },
    {
      "id": "rental_duration",
      "type": "select",
      "question": "How long have you been renting your current place?",
      "required": false,
      "options": [
        { "value": "under_6m", "label": "Less than 6 months" },
        { "value": "6m_1y", "label": "6 months to 1 year" },
        { "value": "1_3y", "label": "1-3 years" },
        { "value": "over_3y", "label": "More than 3 years" }
      ]
    },
    {
      "id": "paid_deposit",
      "type": "radio",
      "question": "Did you pay a security deposit when you moved into your current or most recent rental?",
      "required": true,
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" },
        { "value": "dont_remember", "label": "I don’t remember" }
      ]
    },
    {
      "id": "deposit_amount",
      "type": "select",
      "question": "How much was the security deposit? (UGX)",
      "required": false,
      "options": [
        { "value": "under_500k", "label": "Less than 500k" },
        { "value": "500_999k", "label": "500 - 999k" },
        { "value": "1m_1.5m", "label": "1 - 1.5m" },
        { "value": "1.6m-2m", "label": "1.6m -2m" },
        { "value": "2.1m-3m", "label": "2.1m-3m" },
        { "value": "3.1m_plus", "label": "3.1m or more" },
        { "value": "prefer_not", "label": "Prefer not to say" }
      ]
    },
    {
      "id": "financial_burden",
      "type": "radio",
      "question": "Was the security deposit a financial burden for you?",
      "required": true,
      "options": [
        { "value": "very_difficult", "label": "Yes, very difficult to pay" },
        { "value": "somewhat_difficult", "label": "Somewhat difficult" },
        { "value": "manageable", "label": "No, it was manageable" },
        { "value": "no_problem", "label": "No, not a problem at all" }
      ]
    },
    {
      "id": "clear_explanation",
      "type": "radio",
      "question": "Did you receive a clear explanation of what the deposit covers and under what conditions it would be returned?",
      "required": true,
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "somewhat", "label": "Somewhat" },
        { "value": "no", "label": "No" },
        { "value": "dont_remember", "label": "I don’t remember" }
      ]
    },
    {
      "id": "refund_confidence",
      "type": "radio",
      "question": "How confident are you that you’ll get your full deposit back (or got it back) at the end of your lease?",
      "required": true,
      "options": [
        { "value": "very_confident", "label": "Very confident" },
        { "value": "somewhat_confident", "label": "Somewhat confident" },
        { "value": "not_confident", "label": "Not very confident" },
        { "value": "not_at_all", "label": "Not at all confident" },
        { "value": "already_got", "label": "Already got it back" }
      ]
    },
    {
      "id": "refund_outcome",
      "type": "radio",
      "question": "If you've already moved out, did you get your full deposit back?",
      "required": false,
      "options": [
        { "value": "full", "label": "Yes, in full" },
        { "value": "partial", "label": "Partially" },
        { "value": "none", "label": "No, none of it" },
        { "value": "waiting", "label": "I’m still waiting" },
        { "value": "not_applicable", "label": "Not applicable" }
      ]
    },
    {
      "id": "reasons_explained",
      "type": "radio",
      "question": "If you didn’t get your full deposit back, were the reasons clearly communicated?",
      "required": false,
      "options": [
        { "value": "clear", "label": "Yes, clearly explained" },
        { "value": "somewhat", "label": "Somewhat explained" },
        { "value": "not_explained", "label": "No, not explained" },
        { "value": "not_applicable", "label": "Not applicable" }
      ]
    },
    {
      "id": "dispute_experience",
      "type": "radio",
      "question": "Have you ever disputed a landlord’s decision to withhold part of your deposit?",
      "required": false,
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" },
        {
          "value": "wanted_but_not",
          "label": "I wanted to but didn’t know how"
        }
      ]
    },
    {
      "id": "fairness",
      "type": "radio",
      "question": "Do you believe current security deposit practices are fair to renters?",
      "required": true,
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" },
        { "value": "not_sure", "label": "Not sure" }
      ]
    },
    {
      "id": "alternatives",
      "type": "radio",
      "question": "Would you prefer an alternative to traditional security deposits (e.g., monthly insurance, no-deposit rentals)?",
      "required": true,
      "options": [
        { "value": "yes", "label": "Yes" },
        { "value": "no", "label": "No" },
        { "value": "maybe", "label": "Maybe – I’d like to learn more" }
      ]
    },
    {
      "id": "open_feedback",
      "type": "textarea",
      "question": "Is there anything you'd like to share about your experience with security deposits?",
      "required": false,
      "placeholder": "Write your comments here..."
    }
  ]
}
